
<div class="container">
    <% if current_user  %>
        <h3> <%= current_user.first_name %>'s  Basket</h3>
    <% else %>
        <h3> Your Cart </h3>
    <% end %>
    <h6><%= link_to "Continue Shopping", items_path %></h6>
	<center>
	<!-- <div class="col-10"> -->
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
        <th></th>
        <th>Price</th>
        <th>Unit Measurement</th>
        <th>Quantity</th>
	    </tr>
      <tbody>

    <% @items.each do |item, quantity| %>
      <div class="item-#{item.id}">
        <tr>
        <th scope="row"><strong><%= link_to item.name, item_path(item) %></strong></th>
        <td><%= image_tag item.image_path, size: "3" %></td>
        <td>$<%= item.price %></td>
        <td>$<%= item.unit_measurement %></td>
        <td><%= quantity %></td>
      </tr>
      </div>
      <% end %>
    </tbody>
    </table>
    <div class="checkout">
      <% if current_user %>
      <%= link_to "Create Basket", new_basket_path(items: @items) %>

      <% else %>
        <%= link_to "Login", login_path %> <br />
        <%= link_to "Create New Account", new_user_path %>
      <% end %>
    </div>
  <!-- </div> -->
</center>
</div>
