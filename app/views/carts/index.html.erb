


<div class="container">
    <% if current_user  %>
        <h3> <%= current_user.first_name %>'s  Cart</h3>
    <% else %>
        <h3> Your Cart </h3>
    <% end %>
    <h6><%= link_to "Continue Shopping", items_path %></h6>
	<center>
	<!-- <div class="col-10"> -->
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Basket</th>

        <th>Quantity</th>
	    </tr>
      <tbody>

    <% @baskets.each do |basket, quantity| %>
      <div class="item-#{item.id}">
        <tr>
        <th scope="row"><strong><%= link_to "Basket #{basket.id}", basket_path(basket) %></strong></th>
        <td><%= quantity %></td>
      </tr>
      </div>
      <% end %>
    </tbody>
    </table>
    <div class="checkout">
      <% if current_user %>
        checkout

      <% else %>
        <%= link_to "Login", login_path %> <br />
        <%= link_to "Create New Account", new_user_path %>
      <% end %>
    </div>

</center>
</div>
